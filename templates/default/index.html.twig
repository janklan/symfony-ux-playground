{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}

    {% for author in authors %}
        <h1>{{ author }}</h1>
        <table>
        <tr>
            <th>Post</th>
            <th>Rating Allowed</th>
            <th>Rating Value</th>
        </tr>
        {% for post in author.posts %}
            <tr>
                <td>{{ post }}</td>
                <td>{{ post.ratingAllowed ? 'Yes' : 'No' }}</td>
                <td>{{ post.ratingValue ?: '-' }}</td>
                <td><a href="{{ path('edit', {post: post.id}) }}">Edit (live component)</a></td>
                <td><a href="{{ path('edit', {post: post.id, standard: true}) }}">Edit (standard form)</a></td>
            </tr>
        {% endfor %}
        </table>
        <hr>
    {% endfor %}
    </table>
{% endblock %}
